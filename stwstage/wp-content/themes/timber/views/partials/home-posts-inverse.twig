<section class="hp-posts-inverse">
    <div class="container">
        <div class="row content">
            {% for post in latest|slice(3,2) %}
                <div class="col-sm-4">
                    <article class="entry-list">
                        <div class="words">
                            <div class="post-date">{{ post.date }}</div>
                            {% if post.get_thumbnail %}
                                <a href="{{ post.permalink }}"><img class="feature-image" src="{{ post.get_thumbnail.get_src|resize(1000,500) }}" /></a>
                            {% endif %}
                            {% for category in post.categories|slice(0,1) %}
                                <h4 class="category"><a href="{{ category.get_path }}">{{ category.name }}</a></h4>
                            {% endfor %}
                            <h2><a href="{{ post.permalink }}">{{ post.post_title }}</a></h2>
                            {% if post.subheading %}
                            <h3 class="tile-sub"><a href="{{ post.permalink }}">{{ post.subheading }}</a></h3>
                            {% endif %}
                            <a href="{{ post.permalink }}" class="btn btn-read-more">Read More</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
           <div class="col-sm-4">
               {% include "partials/post-sponsor-inverse.twig" with {"post": post } %}
           </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                {% for post in latest|slice(5,4) %}
                    <article class="entry-list entry-list-inverse">
                        <div class="words">
                            <div class="col-sm-6">
                            <div class="post-date">{{ post.date }}</div>
                            {% if post.get_thumbnail %}
                                <a href="{{ post.permalink }}"><img class="feature-image" src="{{ post.get_thumbnail.get_src|resize(1000,500) }}" /></a>
                            {% endif %}
                            </div>
                            <div class="col-sm-6">
                            {% for category in post.categories|slice(0,1) %}
                                <h4 class="category"><a href="{{ category.get_path }}">{{ category.name }}</a></h4>
                            {% endfor %}
                            <h2 class="featured-smaller"><a href="{{ post.permalink }}">{{ post.post_title }}</a></h2>
                            {% if post.subheading %}
                            <h3 class="tile-sub"><a href="{{ post.permalink }}">{{ post.subheading }}</a></h3>
                            {% endif %}
                            <a href="{{ post.permalink }}" class="btn btn-read-more">Read More</a>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
            <div class="col-sm-4">
               {% include "partials/post-partner.twig" with {"post": post } %}
            </div>
        </div>
    </div>
</section>
