{% extends "layout.twig" %}

{% block content %}
    <div class="archive-header">
                {% if title %}
                    <h1>{{ title }}</h1>
                    <h2 class="description">{{ term.description|wpautop }}</h2>
                {% else %}
                    <h1>Blog</h1>
                {% endif %}
    </div>
    <div class="archive-container container">
        <div class="row page-container">
            <div class="col-sm-8">
                {% for post in posts %}
                    {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
                {% endfor %}

                {% include "partials/archive-pagination.twig" %}
            </div>
            <div class="col-sm-4">
                {% include "partials/sidebar-newsletter.twig" %}
                {% include "partials/sidebar-topics.twig" %}
            </div>
        </div>
    </div>
{% endblock %}
