{% extends "tease.twig" %}

{% block content %}
<article class="entry-list entry-list-inverse">
    <div class="words">
        <div class="col-sm-6">
        <div class="post-date">{{ post.date }}</div>
        {% if post.get_thumbnail %}
            <a href="{{ post.permalink }}"><img class="feature-image" src="{{ post.get_thumbnail.get_src|resize(800,400) }}" /></a>
        {% endif %}
        </div>
        <div class="col-sm-6">
            {% if template != "archive" %}
                {% for category in post.categories|slice(0,1) %}
                    <h4 class="category"><a href="{{ category.get_path }}">{{ category.name }}</a></h4>
                {% endfor %}
            {% endif %}
            <h2 class="featured-smaller"><a href="{{ post.permalink }}">{{ post.post_title }}</a></h2>
            {% if post.subheading %}
            <h3 class="tile-sub"><a href="{{ post.permalink }}">{{ post.subheading }}</a></h3>
            {% endif %}
            <a class="btn btn-read-more" href="{{ post.permalink }}">Read More</a>
        </div>
    </div>
</article>
{% endblock %}
