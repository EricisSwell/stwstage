<link rel="stylesheet" href="{{ css_dir }}/animate.css">

<style type="text/css">

.single-cards .post-hero {
    padding: 80px 0;
    background-attachment: fixed;
    background-size: cover;
    background-position: 50%;
    position: relative;
    background-repeat: no-repeat;
    height: 100%;
    width: 100%;
    }

.single-cards .cardindex {
	background: #f9f8f4;
    padding: 0px;
}

.single-cards .cardindex li#cardIndHead {
	border: none;
	margin: 0;
	padding: 0;
