}

.single-cards .cardindex #cardIndHead h2 {
	color: #ffffff;
    font-weight: 700;
    font-size: 1.35rem;
    font-family: sofia-pro,Helvetica,arial,sans-serif;
    letter-spacing: 0.5px;
    text-align: center;
	text-transform: uppercase;
	width: 100%;
}

.single-cards .cardindex #cardIndHead h2 a{
	background: #3a333e;
	color: #ffffff;
	display: block;
    font-size: 1.35rem;
	padding: 20px;
    text-align: center;
	width: 100%;
}

.single-cards .cardindex li {
	margin: 0;
	width: 100%;
}

.single-cards .cardindex li a {
	border-bottom: 2px solid #e8e3e3;
	border-radius: 0;
	color: #3a333e;
    font-weight: 700;
    font-size: 1.15rem;
    font-family: sofia-pro,Helvetica,arial,sans-serif;
    letter-spacing: 0.5px;
    padding: 20px;
    text-align: left;
	text-transform: uppercase;
	width: 100%;
}
	
.single-cards .cardindex li.active a {
	background: #fccb32;
	color: #3a333e;
}	

.single-cards .tab-content {
	background: transparent;
	padding: 0;
}

.single-cards .tab-content #home .tabHead {
	background: #3a333e;
	margin: 0;
	padding: 14px 20px;
	width: 100%;
}

.single-cards .tab-content #home .tabHead h2 {
	color: #ffffff;
    font-weight: 700;
    font-size: 1.35rem;
    font-family: sofia-pro,Helvetica,arial,sans-serif;
    letter-spacing: 0.5px;
    margin: 0;
    padding: 6px 0;
    text-align: center;
	text-transform: uppercase;
}

.single-cards .tab-content .active .tabHead {
	background: #fccb32;
	margin: 0;
	padding: 14px 20px;
	width: 100%;
}

.single-cards .tab-content .active .tabHead h2 {
	color: #3a333e;
    font-weight: 700;
    font-size: 1.35rem;
    font-family: sofia-pro,Helvetica,arial,sans-serif;
    letter-spacing: 0.5px;
    margin: 0;
    padding: 6px 0;
    text-align: center;
	text-transform: uppercase;
}

.single-cards .tab-content .tabHead a{
	color: #ffffff;
	display: block;
    text-align: center;
}

.single-cards .tab-content .tab-pane:first-child .tab-pane a.arrowLeft {
	visibility: hidden;
}

.single-cards .tab-content .tab-pane:last-child .tab-pane a.arrowRight {
	visibility: hidden;
}

.single-cards .tab-content #home .tabHead a.arrowLeft,
.single-cards .tab-content #home .tabHead a.arrowRight {
	color: #ffffff;
}

.single-cards .tab-content .tabHead a.arrowLeft{
	color: #3a333e;
	display: block;
    font-size: 2.5rem;
	float: left;
    line-height: 0;
    padding: 0 10px;
    text-align: center;
}

.single-cards .tab-content .tabHead a.arrowRight{
	color: #3a333e;
	display: block;
    font-size: 2.5rem;
	float: right;
    line-height: 0;
    padding: 0 10px;
    text-align: center;
}

.single-cards .tab-content .tab-pane {
	position: relative;
}

.single-cards .tab-content .tabBody {
	background: #ffffff;
	padding: 20px;
	position: relative;
}

.single-cards .tab-content .tabBody p {
	font-size: 16px;
	letter-spacing: 0.5px;
	line-height: 1.5;
}

.top-footer,
.secondary-footer {
	display:none;
}

@media only screen and (min-width: 300px) and (max-width: 767px) {

.single-cards .post-hero {
	position: relative;
}

.top-footer,
.secondary-footer {
	display:block;
}

}

