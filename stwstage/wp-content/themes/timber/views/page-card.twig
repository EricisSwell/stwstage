{% extends "layout.twig" %}

{% block content %}
    {% include "partials/hero-interior.twig" %}

    <div class="container">
        <div class="row page-container">
            <div class="col-sm-10 col-sm-offset-1 content page">
                <article class="post" id="post-{{ post.ID }}">
                    {{ post.content }}
                </article>
            </div>
        </div>
    </div>

    {% if post.show_video[0] == "yes" %}
        {% include "partials/page-video-block.twig" with {"post": post } %}
    {% else %}
        <!-- Don't Show Video -->
    {% endif %}
{% endblock %}
